<!-- ######################## Section ######################## -->



<section class="section_light">
    <div class="row">


        <div class="row">
            <div class="six columns image">

                <div class="img_product">
                    <img src="@Model.Images.FirstOrDefault(i => i.Name == "logo").Path" alt="Product Image Description">
                </div>
                <nav class="img_gallery">
                    @foreach (var item in Model.Images)
                    {
                        <a href="@item.Path" class="current"><img src="@item.Path" alt=""></a>
                    }
                </nav>
            </div>
            <div class="six columns">
                <div class="panel">

                    <h3>@Model.Title</h3>
                    <h5>Память</h5>
                    <form name="product_list" action="#">
                        <select name="print">
                            <option value="1100">32Gb</option>
                            <option value="2900">64Gb</option>
                            <option value="1600">128Gb</option>
                        </select>
                        <h5>Color</h5>
                        <select name="print">
                            <option value="1100">Black</option>
                            <option value="2900">White</option>
                            <option value="1600">Pink</option>
                        </select>
                        <input name="unit_price" id="unit_price" value="340.00" type="hidden">
                        <input value="271" name="sales_price" id="total_item" type="hidden">
                        <p style="font-size: 24px">Totals: <span id="grandTotal">$271</span></p>
                        <a href="#" class="green">Add to Busket</a>
                    </form>
                </div> <!-- end panel -->
            </div>
        </div><!-- end row -->

        <h4>Product Info</h4>

        <div class="row">
            <div class="twelve columns">

                <dl class="tabs three-up">
                    <dd class="active"><a href="#simple1">Overview</a></dd>
                    <dd><a href="#simple2">Spesifications</a></dd>
                    <dd><a href="#simple3">Customer Reviews</a></dd>
                </dl>

                <ul class="tabs-content">
                    <li class="active" id="simple1Tab">
                        <p>@Model.Description</p>

                    </li>
                    <li id="simple2Tab">Some content</li>
                    <li id="simple3Tab"><p><strong>John Doe:</strong> Amazing Product</p> <p><strong>Jane Doe:</strong> Ok Product</p> <p><strong>Doe Doe:</strong> Cool</p></li>
                </ul>

            </div>
        </div>


    </div>

</section>

<!-- end section -->
