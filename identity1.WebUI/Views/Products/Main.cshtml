
@{
    ViewBag.Title = "Main";
}



    <link rel="stylesheet" type="text/css" href="/slide.css">


    <div class="all">
        <input checked type="radio" name="respond" id="desktop">
        <article id="slider">
            <input checked type="radio" name="slider" id="switch1">
            <input type="radio" name="slider" id="switch2">
            <input type="radio" name="slider" id="switch3">
            <input type="radio" name="slider" id="switch4">
            <input type="radio" name="slider" id="switch5">
            <div id="slides">
                <div id="overflow">
                    <div class="image">
                        <article><img src="~/Content/Images/slider/1.jpeg"></article>
                        <article><img src="~/Content/Images/slider/2.jpeg"></article>
                        <article><img src="~/Content/Images/slider/3.jpeg"></article>
                        <article><img src="~/Content/Images/slider/4.jpeg"></article>
                        <article><img src="~/Content/Images/slider/5.jpeg"></article>
                    </div>
                </div>
            </div>
            <div id="controls">
                <div class="arrow">
                    <label for="switch1"></label>
                    <label for="switch2"></label>
                    <label for="switch3"></label>
                    <label for="switch4"></label>
                    <label for="switch5"></label>
                </div>
            </div>
            <div id="active">
                <label for="switch1"></label>
                <label for="switch2"></label>
                <label for="switch3"></label>
                <label for="switch4"></label>
                <label for="switch5"></label>
            </div>
        </article>
    </div>
